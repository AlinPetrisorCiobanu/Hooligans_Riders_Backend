{
    "version": 2,
    "routes": [
      { "src": "/api/(.*)", "dest": "/backend/api/$1" },
      { "src": "/app/(.*)", "dest": "/frontend/public/$1" }
    ],
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/backend/api/index.php" },
      { "source": "/app/(.*)", "destination": "/frontend/public/$1" }
    ],
    "builds": [
      { "src": "/backend/api/**/*.php", "use": "vercel/php", "config": { "buildCommand": "./vercel-build.sh" } },
      { "src": "/frontend/public/**", "use": "@vercel/static" }
    ],
    "env": {
      "APP_ENV": "production",
      "APP_DEBUG": "true",
      "APP_URL": "https://yourproductionurl.com",
   
      "APP_CONFIG_CACHE": "/tmp/config.php",
      "APP_EVENTS_CACHE": "/tmp/events.php",
      "APP_PACKAGES_CACHE": "/tmp/packages.php",
      "APP_ROUTES_CACHE": "/tmp/routes.php",
      "APP_SERVICES_CACHE": "/tmp/services.php",
      "VIEW_COMPILED_PATH": "/tmp",
   
      "CACHE_DRIVER": "array",
      "LOG_CHANNEL": "stderr",
      "SESSION_DRIVER": "cookie"
    }
  }
  